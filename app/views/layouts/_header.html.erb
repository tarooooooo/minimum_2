              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
                  <i class="fas fa-sign-out-alt fa-lg"></i>
                <% end %>
              </div>
            </li>
            <li class="nav-item">
